# Database Configuration
DATABASE_URL=postgresql://complyo_user:YOUR_PASSWORD@shared-postgres:5432/complyo_db
POSTGRES_PASSWORD=YOUR_PASSWORD

# Redis Configuration
REDIS_HOST=shared-redis
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# JWT Configuration
JWT_SECRET=YOUR_JWT_SECRET_KEY

# Stripe Configuration
STRIPE_API_KEY=sk_test_YOUR_STRIPE_TEST_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# OpenRouter API (for AI features)
OPENROUTER_API_KEY=sk-or-v1-YOUR_OPENROUTER_KEY

# Environment
ENVIRONMENT=production
NODE_ENV=production

# Frontend URLs
FRONTEND_URL=https://app.complyo.tech
NEXT_PUBLIC_API_URL=https://api.complyo.tech

# SSL/Domain Configuration
LETSENCRYPT_EMAIL=your-email@domain.com

# Service Ports
PORT=8002
VIRTUAL_PORT_BACKEND=8002
VIRTUAL_PORT_DASHBOARD=3002
VIRTUAL_PORT_LANDING=80

# Domain Configuration
VIRTUAL_HOST_LANDING=complyo.tech,www.complyo.tech
VIRTUAL_HOST_API=api.complyo.tech
VIRTUAL_HOST_DASHBOARD=app.complyo.tech

LETSENCRYPT_HOST_LANDING=complyo.tech,www.complyo.tech
LETSENCRYPT_HOST_API=api.complyo.tech
LETSENCRYPT_HOST_DASHBOARD=app.complyo.tech